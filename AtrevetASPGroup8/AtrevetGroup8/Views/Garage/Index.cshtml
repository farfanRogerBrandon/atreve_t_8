@{
}
@model List<AtrevetGroup8.Models.Grage>

<h1>Lista de Usuarios</h1>


<div class="container-xl Stilos-tabla">
    <table class="table dataTables_wrapper display responsive nowrap">
        <thead>
            <tr>
                <th>Dirección</th>
                <th>Disponibilidad</th>
                <th>Costo</th>
                <th>Descripción</th>
                <th>Altura</th>
                <th>Longitud</th>
                <th>Rating</th>
                <th>Espacios</th>
                <th>Horario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var parkingSpace in Model)
            {
                <tr>
                    <td>@parkingSpace.Address</td>
                    <td>@parkingSpace.Availability</td>
                    <td>@parkingSpace.Cost</td>
                    <td>@parkingSpace.Description</td>
                    <td>@parkingSpace.Height</td>
                    <td>@parkingSpace.Length</td>
                    <td>@parkingSpace.Rating</td>
                    <td>@parkingSpace.Spaces</td>
                    <td>
                        <ul>
                            @if (parkingSpace.TimeTable != null)
                            {
                                <ul>

                                    @foreach (var entry in parkingSpace.TimeTable)
                                    {
                                        if (entry.Periods != null && entry.Periods.Count > 0)
                                        {
                                            <li>@entry.Day:</li>
                                            <ul>
                                                @foreach (var period in entry.Periods)
                                                {
                                                    <li>@period.StartHour.ToString("00")/@period.EndHour.ToString("00")</li>
                                                }
                                            </ul>
                                        }
                                    }

                                </ul>
                            }
                            else
                            {

                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
